<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/homeFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".fragment.HomeFragment">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:id="@+id/customeToolbar"
            tools:ignore="MissingConstraints">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookmyseat"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/light_red"
                    android:fontFamily="@font/verdana_bold"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_25sp"/>

                <ImageView
                    android:layout_width="@dimen/width_30dp"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:src="@drawable/ic_profile_icon"
                    android:id="@+id/profile_icon"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_50dp">

            <RelativeLayout
                android:id="@+id/calender_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@drawable/gray_background_round"
                android:padding="@dimen/padding_10dp">

                <ImageView
                    android:id="@+id/backword_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40dp"
                    android:contentDescription="@string/backword_button_icon"
                    android:src="@drawable/arrow" />

                <RelativeLayout
                    android:id="@+id/calender_edittext_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/date_range_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/calender_icon"
                        android:src="@drawable/calender_date" />

                    <TextView
                        android:id="@+id/edit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_toEndOf="@id/date_range_icon"
                        android:layout_toRightOf="@id/date_range_icon"
                        android:fontFamily="@font/verdana_bold"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_18sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/forword_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/drop_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/available_seat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calender_layout"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@drawable/layout_backgroud"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:id="@+id/text_reservedSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/futura_medium_bt"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_40sp" />

                <TextView
                    android:id="@+id/book_seat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_reservedSeat"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/verdana"
                    android:text="@string/available_seats"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/booked_seat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_seat_layout"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@drawable/layout_backgroud"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:id="@+id/text_bookedSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/verdana"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_40sp" />

                <TextView
                    android:id="@+id/reserved_seat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_bookedSeat"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/verdana"
                    android:text="@string/reserved_seats"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booked_seat_layout"
                android:layout_marginTop="@dimen/margin_10dp"
                android:padding="@dimen/padding_10dp"
                android:background="@drawable/time_layout">

                <LinearLayout
                    android:id="@+id/time_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp">

                    <TextView
                        android:id="@+id/text_signIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana_bold"
                        android:text="@string/check_in"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana_bold"
                        android:text="@string/check_out"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_linear_layout"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_20dp">

                    <TextView
                        android:id="@+id/edit_checkInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="@dimen/text_size_15sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/edit_checkOutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:text="20dp"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spinner_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_layout"
                android:layout_marginTop="0dp"
                android:background="@color/light_gray">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:background="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/verdana_bold"
                android:gravity="center"
                android:text="@string/reserve_my_seat"
                android:textSize="@dimen/text_size_20sp" />

        </RelativeLayout>
    </FrameLayout>
</layout>