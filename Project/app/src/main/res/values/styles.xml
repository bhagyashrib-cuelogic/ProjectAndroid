<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">false</item>
        <item name="android:titleTextStyle">@font/verdana_bold</item>
        <item name="titleTextColor">#E8FD595E</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">false</item>
        <item name="android:titleTextStyle">@font/verdana_bold</item>
        <item name="titleTextColor">#E8FD595E</item>
    </style>


    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="NavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InActiveText</item>
    </style>

    <style name="ActiveText">
        <item name="android:fontFamily">@font/verdana_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InActiveText">
        <item name="android:fontFamily">@font/verdana</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
